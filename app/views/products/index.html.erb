<% provide(:title, "Propebis | Productos") %>
<%= render 'shared/notifications' %>

<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-10">
    <h2>Productos</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Home</a>
      </li>
      <li class="active">
        <strong>Productos</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Productos</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Producto', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="25" data-filter=#filter>
            <thead>
              <tr>
                <th>Nombre</th>
                <th>Categoría</th>
                <th>Unidad de Medida</th>
                <th>Descripción</th>
                <th>Marca</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @products.each do |product| %>
              <tr>
                <td><%= product.name %></td>
                <td><%= Category.find(product.category_id).name %></td>
                <td><%= product.unit_of_measurement %></td>
                <td><%= product.description %></td>
                <td><%= product.trademark %></td>
                <td class="center"><%= button_to 'Editar', { action: 'edit', id: product.id}, method: :get, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                <td class="center"><%= button_to 'Eliminar', { action: 'destroy', id: product.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan='5'>
                  <ul class="pagination pull-right"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
          
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.footable').footable();
    });
  </script>
<% end %>