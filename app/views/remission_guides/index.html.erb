<% provide(:title, "Propebis | Guías de Remisión") %>
<%= render 'shared/notifications' %>

<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-10">
    <h2>Guías de Remisión</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Home</a>
      </li>
      <li class="active">
        <strong>Guías de Remisión</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Guías de Remisión</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nueva Guía de Remisión', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="25" data-filter=#filter>
            <thead>
              <tr>
                <th>Eḿpresa</th>
                <th>Cliente</th>
                <th>Transportista</th>
                <th>Vehículo</th>
                <th>Nro. Guía de Remisión</th>
                <th>Punto de Partida</th>
                <th>Punto Final</th>
                <th>Fecha</th>
                <th>Monto Final</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @remission_guides.each do |remission_guide| %>
                <tr>
                  <td align="center"><%= Business.find(remission_guide.business_id).name %></td>
                  <td align="center"><%= Client.find(remission_guide.client_id).name %></td>
                  <td align="center"><%= Driver.find(remission_guide.driver_id).name %></td>
                  <td align="center"><%= Vehicle.find(remission_guide.vehicle_id).plate %></td>
                  <td align="center"><%= remission_guide.remission_guide_number %></td>
                  <td align="center"><%= remission_guide.initial_point %></td>
                  <td align="center"><%= remission_guide.final_point %></td>
                  <td align="center"><%= remission_guide.date %></td>
                  <td align="center"><%= remission_guide.ammount %></td>
                  <td align="center"><%= button_to 'Editar', { action: 'edit', id: remission_guide.id}, method: :get, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                  <td align="center"><%= button_to 'Eliminar', { action: 'destroy', id: remission_guide.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan='5'>
                  <ul class="pagination pull-right"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
          
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.footable').footable();
    });
  </script>
<% end %>