<% provide(:title, "Propebis | Usuarios") %>
<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Usuarios</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Home</a>
      </li>
      <li class="active">
        <strong>Usuarios</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Usuarios</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Usuario', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar">
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th align='center'>Nombre</th>
                  <th align='center'>Nombre de Usuario</th>
                  <th align='center'>e-mail</th>
                  <th align='center'>Rol</th>
                  <th align='center'>Editar</th>
                  <th align='center'>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @users.each do |user| %>
                  <tr>
                    <td align='center'><%= user.name %></td>
                    <td align='center'><%= user.username %></td>
                    <td align='center'><%= user.email %></td>
                    <td align='center'><%= user.roles_mask %></td>
                    <td align='center'><%= link_to 'Editar', { action: 'edit', id: user.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align='center'><%= link_to 'Eliminar', { action: 'destroy', id: user.id}, method: :delete,  data: { confirm: 'Are you sure?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable');
    });
  </script>
<% end %>
