<% provide(:title, "Propebis | Home") %>

<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm12">
      <% if @alertas.length > 0 %>
        <div class='row notifications-margin'>
          <div class="ibox-content ">
            <div class="alert alert-warning no-notifications-margin">
              <% if @alertas.length == 1 %>
                <h3>Hay <strong><%= @alertas.length %></strong> producto por vencer</h3>
              <% else %>
                <h3>Hay <strong><%= @alertas.length %></strong> productos por vencer</h3>
              <% end %>
              <% @alertas.each do |a| %>
                <p><%= a %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
      <div class="text-center m-t-lg">
        <div class="home-page">
          <h1 class="logo-name"><img id="logo-img" src="<%= image_url 'logo.png' %>" alt="PROPEBIS S.A.C."></h1>
        </div>
      </div>
    </div>
  </div>
</div>