<p id="notice"><%= notice %></p>

<h1>Listing Purchase Orders</h1>

<table>
  <thead>
    <tr>
      <th>Business</th>
      <th>Supplier</th>
      <th>Order number</th>
      <th>Date</th>
      <th>Order date</th>
      <th>Delivery date</th>
      <th>Billing address</th>
      <th>Delivery address</th>
      <th>Monto Final</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @purchase_orders.each do |purchase_order| %>
      <tr>
        <td><%= Business.find(purchase_order.business).name %></td>
        <td><%= Supplier.find(purchase_order.supplier).name %></td>
        <td><%= purchase_order.order_number %></td>
        <td><%= purchase_order.date %></td>
        <td><%= purchase_order.order_date %></td>
        <td><%= purchase_order.delivery_date %></td>
        <td><%= purchase_order.billing_address %></td>
        <td><%= purchase_order.delivery_address %></td>
        <td><%= purchase_order.ammount %></td>
        <td><%= link_to 'Show', purchase_order %></td>
        <td><%= link_to 'Edit', edit_purchase_order_path(purchase_order) %></td>
        <td><%= link_to 'Destroy', purchase_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

