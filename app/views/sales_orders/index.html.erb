<% provide(:title, "Propebis | Órdenes de Venta") %>
<p id="notice"><%= notice %></p>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Órdenes de Venta</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Home</a>
      </li>
      <li class="active">
        <strong>Órdenes de Venta</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Órdenes de Venta</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nueva Orden de Venta', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="Buscar">
          <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="25" data-filter=#filter>
            <thead>
              <tr>
                <th>Eḿpresa</th>
                <th>Cliente</th>
                <th>Contrato</th>
                <th>Nro. Orden de Venta</th>
                <th>Fecha</th>
                <th>Fecha de la Orden</th>
                <th>Fecha de Entrega</th>
                <th>Dirección de Facturación</th>
                <th>Dirección de Entrega</th>
                <th>Monto Final</th>
                <th colspan="2"></th>
              </tr>
            </thead>
            <tbody>
              <% @sales_orders.each do |sales_order| %>
                <tr>
                  <td><%= Business.find(sales_order.business_id).name %></td>
                  <td><%= Client.find(sales_order.client_id).name %></td>
                  <td><%= Contract.find(sales_order.contract_id).contract_number %></td>
                  <td><%= sales_order.sales_order_number %></td>
                  <td><%= sales_order.date %></td>
                  <td><%= sales_order.order_date %></td>
                  <td><%= sales_order.delivery_date %></td>
                  <td><%= sales_order.billing_address %></td>
                  <td><%= sales_order.delivery_address %></td>
                  <td><%= sales_order.ammount %></td>
                  <td align="center"><%= button_to 'Editar', { action: 'edit', id: sales_order.id}, method: :get, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                  <td align="center"><%= button_to 'Eliminar', { action: 'destroy', id: sales_order.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                </tr>
              <% end %>
            </tbody>
            <tfoot>
              <tr>
                <td colspan='5'>
                  <ul class="pagination pull-right"></ul>
                </td>
              </tr>
            </tfoot>
          </table>
          
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.footable').footable();
    });
  </script>
<% end %>