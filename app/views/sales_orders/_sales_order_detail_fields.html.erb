<div class='pod_details'>
  <%= f.collection_select :product_id, Product.order(:name), :id, :name, { prompt: 'Seleccione un Producto'}, html_options = {class: 'product_select'} %>
  <%= text_field '#', 'unit_of_measurement', class: 'unit_of_measurement', readonly: true %>
  <%= f.number_field :quantity, class: 'sod_quantity', step: :any %>
  <%= f.number_field :unit_price, class: 'sod_unit_price', step: :any %>
  <%= f.number_field :subtotal, class: 'sod_subtotal', step: :any, readonly: true %>
  <%= f.hidden_field :_destroy %>
  <%= link_to 'Eliminar', '#', class: "remove_fields" %>
</div>