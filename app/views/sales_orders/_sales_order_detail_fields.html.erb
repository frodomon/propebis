<tr id='content_details'>
  <td>
  	<%= f.collection_select :product_id, Product.order(:name), :id, :name, options = { prompt: 'Seleccione un Producto'}, html_options = {class: 'product_select select2_demo_1 form-control'} %>
  </td>
  <td>
  	<%= text_field '#', 'unit_of_measurement', class: 'unit_of_measurement form-control', readonly: true %>
  </td>
  <td>
  	<%= f.number_field :quantity, class: 'sod_quantity form-control', step: :any %>
  </td>
  <% if can? :manage, :all %>
    <td class='onedit'>
      <%= f.number_field :pending_rg, class: 'pending_rg form-control', step: :any %>
    </td>
    <td class='onedit'>
      <%= f.number_field :pending_cg, class: 'pending_cg form-control', step: :any %>
    </td>
    <td class='onedit'>
      <%= f.number_field :pending_inv, class: 'pending_inv form-control', step: :any %>
    </td>
  <% else %>
    <td class='onedit'>
      <%= f.number_field :pending_rg, class: 'pending_rg form-control', readonly: true, step: :any %>
    </td>
    <td class='onedit'>
      <%= f.number_field :pending_cg, class: 'pending_cg form-control', readonly: true, step: :any %>
    </td>
    <td class='onedit'>
      <%= f.number_field :pending_inv, class: 'pending_inv form-control', readonly: true, step: :any %>
    </td>
  <% end %>
  <td>
  	<%= f.number_field :unit_price, class: ' sod_unit_price form-control', step: :any, readonly: true %>
  </td>
  <td>
  	<%= f.number_field :subtotal, class: 'sod_subtotal form-control', step: :any, readonly: true %>
  </td>
  <td align='center'>
  	<%= f.hidden_field :_destroy %>
    <button class="btn btn-danger btn-circle remove_row_fields" type="button">
      <i class="fa fa-times"></i>
    </button>
  </td>
</tr>