<% provide(:title, "Propebis | Proveedores") %>
<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-12">
    <h2>Proveedores</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Proveedores</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Proveedores</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Proveedor', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th align='center'>Razón Social</th>
                  <th align='center'>RUC</th>
                  <th align='center'>Dirección</th>
                  <th align='center'>Teléfono</th>
                  <th align='center'>Contacto</th>
                  <th align='center'>Activo</th>
                  <th align='center'>Editar</th>
                  <th align='center'>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @suppliers.each do |supplier| %>
                  <tr>
                    <td align='center'><%= supplier.name %></td>
                    <td align='center'><%= supplier.ruc %></td>
                    <td align='center'><%= supplier.address %></td>
                    <td align='center'><%= supplier.telephone %></td>
                    <td align='center'><%= supplier.contact %></td>
                    <td align='center'><%= human_boolean(supplier.active) %></td>
                    <td align='center'><%= link_to 'Editar', { action: 'edit', id: supplier.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align='center'><%= link_to 'Eliminar', { action: 'destroy', id: supplier.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Proveedores');
    });
  </script>
<% end %>
