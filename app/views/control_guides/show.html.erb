<% provide(:title, "Propebis | Ver Guía de Remisión Interna") %>

<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-12">
    <h2>Ver Guía de Remisión Interna</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li>
        <a href="<%= url_for :controller => 'control_guides', :action => 'index' %>">Guías de Remisión Interna</a>
      </li>
      <li class="active">
        <strong>Ver Guía de Remisión Interna</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h3>Ver Guía de Remisión Interna</h3>
        </div>
        <div class="ibox-content">
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Cliente:</strong>
                <%= Client.find(@control_guide.client_id).name %>
              </p>
              
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Nro. Orden de Venta:</strong>
                <%= SalesOrder.find(@control_guide.sales_order_id).sales_order_number %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Empresa:</strong>
                <%= Business.find(@control_guide.business_id).name %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Transportista:</strong>
                <%= Driver.find(@control_guide.driver_id).name %>
              </p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Vehículo:</strong>
                <% v = Vehicle.find(@control_guide.vehicle_id) %>
                <%= v.trademark %> <%= v.plate %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Nro. Guía de Remisión:</strong>
                 <%= @control_guide.control_guide_number %>
              </p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Fecha:</strong>
                <%= @control_guide.date %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Punto Inicial:</strong>
                <%= @control_guide.initial_point %>
              </p>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Punto Final:</strong>
                <%= @control_guide.final_point %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6 col-md-6 col-sm-6">
              <p>
                <strong>Monto Final:</strong>
                <%= @control_guide.ammount %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="table-responsive col-lg-12 col-md-12 col-sm-12">
              <table class="footable table table-stripped">
                <thead>
                  <tr class="show-table">
                    <th align="center">Producto</th>
                    <th align="center">Unidad de Medida</th>
                    <th align="center">Cantidad</th>
                    <th align="center">P. Unit</th>
                    <th align="center">Subtotal</th>
                  </tr>
                </thead>
                <tbody>
                  <% @control_guide_details.each do |cgd| %>
                    <tr>
                      <% p = Product.find(cgd.product_id) %>
                      <td align="center"><%= p.name %></td>
                      <td align="center"><%= p.unit_of_measurement %></td>
                      <td align="center"><%= cgd.quantity %></td>
                      <td align="center"><%= cgd.unit_price %></td>
                      <td align="center"><%= cgd.subtotal %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <%= link_to 'Editar Guía de Remisión Interna', { action: 'edit', id: @control_guide.id }, class: 'btn btn-w-m btn-success' %>
          <%= button_to 'Volver', { action: 'index'}, method: :get, class: 'btn btn-w-m btn-info' %>
        </div>
      </div>
    </div>
  </div>  
</div>