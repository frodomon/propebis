<% provide(:title, "Propebis | Transportistas") %>
<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-12">
    <h2>Transportistas</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Transportistas</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Transportistas</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Transportista', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th align='center'>Nombre</th>
                  <th align='center'>Licencia de Conducir</th>
                  <th align='center'>Editar</th>
                  <th align='center'>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                 <% @drivers.each do |driver| %>
                  <tr>
                    <td align='center'><%= driver.name %></td>
                    <td align='center'><%= driver.license %></td>
                    <td align='center'><%= link_to 'Editar', { action: 'edit', id: driver.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align='center'><%= link_to 'Eliminar', { action: 'destroy', id: driver.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Transportistas');
    });
  </script>
<% end %>