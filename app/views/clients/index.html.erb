<% provide(:title, "Propebis | Clientes") %>
<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-12">
    <h2>Clientes</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Inicio</a>
      </li>
      <li class="active">
        <strong>Clientes</strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight no-padding">
  <%= render 'shared/notifications' %>
  <div class="row breadcrumbs-margin">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Clientes</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nuevo Cliente', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th align='center'>Razón Social</th>
                  <th align='center'>RUC</th>
                  <th align='center'>Dirección de Facturación</th>
                  <th align='center'>Dirección de Entrega</th>
                  <th align='center'>Teléfono</th>
                  <th align='center'>Contacto</th>
                  <th align='center'>Activo</th>
                  <th align='center'>Editar</th>
                  <th align='center'>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @clients.each do |client| %>
                  <tr>
                    <td class="center"><%= client.name %></td>
                    <td class="center"><%= client.ruc %></td>
                    <td class="center"><%= client.billing_address %></td>
                    <td class="center"><%= client.delivery_address %></td>
                    <td class="center"><%= client.telephone %></td>
                    <td class="center"><%= client.contact %></td>
                    <td class="center"><%= human_boolean(client.active) %></td>
                    <td class="center"><%= link_to 'Editar', { action: 'edit', id: client.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td class="center"><%= link_to 'Eliminar', { action: 'destroy', id: client.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable','Clientes');
    });
  </script>
<% end %>