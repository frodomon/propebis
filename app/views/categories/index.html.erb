<% provide(:title, "Propebis | Categorías de Producto") %>
<%= render 'shared/notifications' %>

<div class="row wrapper border-bottom white-bg page-heading breadcrumbs-margin">
  <div class="col-lg-10">
    <h2>Categorías de Producto</h2>
    <ol class="breadcrumb">
      <li>
        <a href="<%= url_for :controller => 'static_pages', :action => 'home' %>">Home</a>
      </li>
      <li class="active">
        <strong>Categorías de Producto</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-title">
          <h5>Categorías de Producto</h5>
        </div>
        <div class="ibox-content">
          <%= button_to 'Nueva Categoría', { action: 'new'}, method: :get, class: 'btn btn-w-m btn-primary' %>
          <div class='table-responsive'>
            <table class="table table-stripped table-bordered table-hover datatable">
              <thead>
                <tr>
                  <th align='center'>ID</th>
                  <th align='center'>Nombre</th>
                  <th align='center'>Editar</th>
                  <th align='center'>Eliminar</th>
                </tr>
              </thead>
              <tbody>
                <% @categories.each do |category| %>
                  <tr>
                    <td align='center'><%= category.id %></td>
                    <td align='center'><%= category.name %></td>
                    <td align='center'><%= link_to 'Editar', { action: 'edit', id: category.id}, class: 'btn btn-w-m btn-warning btn-xs' %></td>
                    <td align='center'><%= link_to 'Eliminar', { action: 'destroy', id: category.id}, method: :delete,  data: { confirm: '¿Está seguro?' }, class: 'btn btn-w-m btn-danger btn-xs' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
        <!--Fin Ibox Content-->
      </div>
      <!--Fin Ibox-->
    </div>
  </div>
</div>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      load_table_controls('datatable');
    });
  </script>
<% end %>