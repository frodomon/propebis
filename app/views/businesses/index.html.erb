<p id="notice"><%= notice %></p>

<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ruc</th>
      <th>Billing address</th>
      <th>Delivery address</th>
      <th>Telephone</th>
      <th>Contact</th>
      <th>Active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <tr>
        <td><%= business.name %></td>
        <td><%= business.ruc %></td>
        <td><%= business.billing_address %></td>
        <td><%= business.delivery_address %></td>
        <td><%= business.telephone %></td>
        <td><%= business.contact %></td>
        <td><%= human_boolean(business.active) %></td>
        <td><%= link_to 'Show', business %></td>
        <td><%= link_to 'Edit', edit_business_path(business) %></td>
        <td><%= link_to 'Destroy', business, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

