<%= form_for(@business, html: {class: 'form-horizontal'}) do |f| %>
  <% if @business.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@business.errors.count, "error") %> prohibited this business from being saved:</h2>

      <ul>
      <% @business.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, "Razón Social", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :name, autofocus: true, placeholder: 'Razón Social', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :ruc, "RUC", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :ruc, placeholder: 'RUC', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :billing_address, "Dirección de Facturación", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :billing_address, placeholder: "Dirección de Facturación", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :delivery_address, "Dirección de Entrega", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :delivery_address, placeholder: "Dirección de Entrega", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :telephone, "Teléfono", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :telephone, placeholder: "Teléfono", class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :contact, "Contacto", class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= f.text_field :contact, placeholder: 'Contacto', class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :active, 'Activo', class: 'col-lg-4 control-label' %>
    <div class='col-lg-8'>
      <%= check_box_tag '#', value='1', checked= true, options = { id: 'chk_active',class: 'checkbox', readonly: true} %>
      <%= f.hidden_field :active %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-primary block m-b' %>
  </div>
<% end %>

<% content_for :javascript do %>
  <script type="text/javascript">
    $(function() {
      $('.footable').footable();
      $('.checkbox').iCheck({
        checkboxClass: 'icheckbox_square-green',
        radioClass: 'iradio_square-green',
      });
    });
  </script>
<% end %>
